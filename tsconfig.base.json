{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@frappe/account/application": ["libs/account/application/src/index.ts"],
      "@frappe/account/domain": ["libs/account/domain/src/index.ts"],
      "@frappe/account/persistence/mongodb": ["libs/account/persistence/mongodb/src/index.ts"],
      "@frappe/account/ui": ["libs/account/ui/src/index.ts"],
      "@frappe/category/application": ["libs/category/application/src/index.ts"],
      "@frappe/category/domain": ["libs/category/domain/src/index.ts"],
      "@frappe/category/persistence/mongodb": ["libs/category/persistence/mongodb/src/index.ts"],
      "@frappe/common/design-system": ["libs/common/design-system/src/index.ts"],
      "@frappe/common/persistence/mongodb": ["libs/common/persistence/mongodb/src/index.ts"],
      "@frappe/common/test": ["libs/common/test/src/index.ts"],
      "@frappe/common/utils": ["libs/common/utils/src/index.ts"],
      "@frappe/common/value-object": ["libs/common/value-object/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
